<header>
  <!-- header inner -->
  <div class="header">
    <div class="container">
      <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
          <div class="full">
            <div class="center-desk">
              <div class="logo">
                <a href="/"><img src="/images/logo.png" alt="#" /></a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
          <nav class="navigation navbar navbar-expand-md navbar-dark">
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarsExample04"
              aria-controls="navbarsExample04"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsExample04">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item <%= Page_Name ==='index' && 'active' %>">
                  <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item <%= Page_Name ==='about' && 'active' %>">
                  <a class="nav-link" href="/about">About</a>
                </li>
                <li class="nav-item <%= Page_Name ==='courses' && 'active' %>">
                  <a class="nav-link" href="/courses">Courses</a>
                </li>
                <li class="nav-item <%= Page_Name ==='trainer' && 'active' %>">
                  <a class="nav-link" href="/trainer">Trainer</a>
                </li>
                <li class="nav-item <%= Page_Name ==='gallery' && 'active' %>">
                  <a class="nav-link" href="/gallery">Gallery</a>
                </li>

                <% if(!userIN) {%>

                <li class="nav-item <%= Page_Name ==='login' && 'active' %>">
                  <a class="nav-link" href="/login"
                    ><span
                      ><i class="fa fa-sign-in" aria-hidden="true"></i></span
                  ></a>
                </li>
                <li class="nav-item <%= Page_Name ==='register' && 'active' %>">
                  <a class="nav-link" href="/register"
                    ><span
                      ><i class="fa fa-user-plus" aria-hidden="true"></i></span
                  ></a>
                </li>
                <% } %> <% if(userIN) {%>
                <li class="nav-item <%= Page_Name==='dashboard' && 'active' %>">
                  <a class="nav-link" href="/users/dashboard">Dashboard</a>
                </li>
                <li>
                  <a class="nav-link log mr-2" href="/users/logout"
                    ><span
                      ><i class="fa fa-sign-out" aria-hidden="true"></i></span
                  ></a>
                </li>

                <% } %>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
